generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Team
  leads     Lead[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Team {
  comercial
  prospect
}

model Lead {
  id          String   @id @default(uuid())
  companyName String   @unique
  cep         String
  address     String
  email       String   @unique
  phone       String
  contact     String
  message     String?
  status      Status?  @default(waiting)
  creator     User     @relation(fields: [creatorId], references: [id])
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  reject
  accepted
  waiting
}
